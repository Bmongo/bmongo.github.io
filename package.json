{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.8.1",
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "next dev",
    "dev:turbopack": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:typo": "autocorrect --lint src/**/*.md"
  },
  "lint-staged": {
    "*.md": "autocorrect --fix",
    "**.md": "cspell lint",
    "*.{ts,tsx,md,json}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,mdx,json}": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.3.3",
    "@types/mdx": "^2.0.13",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/rss": "^0.0.32",
    "autocorrect-node": "^2.14.0",
    "cspell": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "globby": "^14.1.0",
    "gray-matter": "^4.0.3",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "lint-staged": "^16.1.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "remark-frontmatter": "^5.0.0",
    "shiki": "^3.6.0",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
